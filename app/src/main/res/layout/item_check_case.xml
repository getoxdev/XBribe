<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/cardview_default_elevation"
    android:layout_marginRight="12dp"
    android:layout_marginLeft="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    >
    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/image_crime"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_gravity="center"
            tools:src="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:background="@color/md_grey_100"
            android:layout_marginStart="@dimen/margin_padding_size_large"
            android:layout_marginEnd="@dimen/margin_padding_size_large"
            >
            <TextView
                android:id="@+id/tv_organization_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Organization Name"
                android:layout_marginStart="14dp"
                android:textColor="@color/md_blue_grey_900"
                android:fontFamily="@font/lora_bold"
                android:textSize="@dimen/text_size_large"
                />
            <TextView

                android:id="@+id/tv_case_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Some description about the case"
                android:ellipsize="end"
                android:maxLines="5"
                android:layout_below="@+id/tv_organization_name"
                android:fontFamily="@font/lora_regular"
                android:padding="@dimen/margin_padding_size_medium"
                android:textSize="@dimen/text_size_medium"
                />
            <Button
                android:id="@+id/btn_case_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GET DETAILS"
                android:layout_marginTop="18dp"
                android:background="@color/md_blue_grey_900"
                android:layout_marginBottom="18dp"
                android:textColor="@color/md_grey_50"
                android:padding="8dp"
                android:layout_below="@+id/tv_case_description"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Process"
                android:layout_alignParentLeft="true"
                android:id="@+id/tv_case_process"
                android:layout_below="@+id/tv_case_description"
                android:layout_marginTop="28dp"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                />

        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>